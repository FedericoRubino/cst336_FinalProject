<%- include('templates/header'); -%>


<script>

	function confirmF(id){
		if(confirm("Do you really want to delete this user?")){
			location.href = "/user/"+id+"/delete";
		}
	}
	
</script>

<div class="container">
    <div class ="jumbotron">
        <h1 style="text-align:center;"> Found user </h1>
        <div class="row">
            <div class="col-sm-4"> </div>
            <button class="col-sm-4 btn btn-info btn-block" onclick="location.href='/';" > Search Again </button> 
            <div class="col-sm-4"></div>            
        </div>
    </div>
    
    
    <div class="row">
        <%if(!user){%>
            <h1 class='col-sm-12 nofound'>CANNOT FIND YOUR Profile!!!</h1>
        <%}else{%>
            
            <img src="data:image/png;base64, <%=user.profilePic%>" class="storyImg mr-3" alt="...">
            <!--<img class='col-sm-4 portrait' src="img/csumblogo.png" alt ='picture!!' />-->

            <div class='col-sm-4 info'>
                <h3><%=user.firstName%> <%=user.lastName%></h3>
                <div>Sex: <%=user.sex%></div>
                <div class='bio'><%=user.description%></div>
                <a href="/user/<%=user.userId%>/edit">Edit</a> 
                <button onclick="confirmF(<%=user.userId%>)">Delete</button>
                
            </div>
            
            <div id="storyStream" class="storyStream">            <div id="storyStream" class="storyStream">
        		<% if ( !stories ) { %>
        			<p>stories not found</p>
        		<% } else { %>
        			<% stories.forEach(function(story){ %>
        				<%- include('templates/story.ejs', { "story" : story } ) -%>
        			<% }); %>
        		<% } %>
	        </div> 
            
        <%}%>
    </div>
</div>

<%- include('templates/footer'); -%>

