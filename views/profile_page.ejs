<%- include('templates/header'); -%>


<script>

	function confirmF(id){
		if(confirm("Do you really want to delete this user?")){
			location.href = "/user/"+id+"/delete";
		}
	}
	
</script>

<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    
<%if(!user){%>
        <h1 class='col-sm-12 nofound'>CANNOT FIND YOUR PROFIlE!!!</h1>
<%}else{%>
    <div class="container" style="margin-top: 20px; margin-bottom: 20px;">
    	<div class="row panel">
            <div class="col-md-8  col-xs-12">
                <img src="data:image/png;base64, <%=user.profilePic%>" class="img-thumbnail visible-xs picture_mob" alt="...">
                <div class="header">
                    <h1><%=user.firstName%> <%=user.lastName%></h1>
                    <h4><%=user.sex%></h4>
                    <span><%=user.description%></span>
               </div>
                <button onClick="location.href='/user/<%=user.userId%>/edit';">Edit</button> 
                <button onclick="confirmF(<%=user.userId%>)">Delete</button>
            </div>
        </div>   
    </div>
    
    <div id="storyStream" class="storyStream">
    	<% if ( !stories ) { %>
    		<p>stories not found</p>
    	<% } else { %>
    		<% stories.forEach(function(story){ %>
    			<%- include('templates/story.ejs', { "story" : story } ) -%>
    		<% }); %>
    	<% } %>
    </div> 
<%}%>
<%- include('templates/footer'); -%>
