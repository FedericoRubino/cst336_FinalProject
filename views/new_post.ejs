<%- include('templates/header'); -%>
<div class="container">
    <div class ="jumbotron">
        <h1 style="text-align:center;"> Create New Post </h1>
        <div class="row">
            <div class="col-sm-4"> </div>
            <button class="col-sm-4 btn btn-info btn-block" onclick="location.href='/';" > HOME </button> 
            <div class="col-sm-4"></div>            
        </div>
    </div>
    <h3>Add new Post</h3>
    

    <form action='/post/new' method="post" >
        <div class="form-group row">
            <label  for="title" class="col-sm-4 col-form-label">Title</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="title" name="title" placeholder='Title' required>
            </div>
        </div>
        
        <div class="form-group row">
            <label  for="content" class="col-sm-4 col-form-label">Content</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="content" name="content" placeholder='Some stuff here' required>
            </div>
        </div>
        
        <div class="form-group row">
            <label  for="picture" class="col-sm-4 col-form-label">Picture</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="picture" name="picture" placeholder='a picture' required>
            </div>
        </div>
        
        <!--<div class="form-group row">-->
        <!--    <label  for="userId" class="col-sm-4 col-form-label">This will be removed</label>-->
        <!--    <div class="col-sm-4">-->
        <!--        <input type="text" class="form-control" id="userId" name="userId" placeholder='userId' required>-->
        <!--    </div>-->
        <!--</div>-->
        
        <div class="form-group row">
            <label  for="category" class="col-sm-4 col-form-label">Category</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="category" name="category" placeholder='category' required>
            </div>
        </div>
    
        
        <div class="form-group row">
            <div class="col-sm-4"> </div>
            <div class="col-sm-4">
                <button class="btn btn-primary btn-block"> Create Post </button> 
            </div>
        </div>
        <div class="col-sm-4"></div>            
    
    </form>
</div>
<%- include('templates/footer'); -%>