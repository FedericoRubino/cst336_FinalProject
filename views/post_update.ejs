<%- include('templates/header'); -%>
<div class="container">
    <div class ="jumbotron">
        <h1 style="text-align:center;"> Update Post </h1>
        <div class="row">
            <div class="col-sm-4"> </div>
            <button class="col-sm-4 btn btn-info btn-block" onclick="location.href='/';" > CANCEL </button> 
            <div class="col-sm-4"></div>            
        </div>
    </div>
    <h3>Edit Post</h3>
    

    <form action='/update/story/<%=storyId%>?_method=PUT' method="POST" enctype="multipart/form-data" >
        <div class="form-group row">
            <label  for="title" class="col-sm-4 col-form-label">Title</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="title" name="title" value="<%=story.title%>">
            </div>
        </div>
        
        <div class="form-group row">
            <label  for="content" class="col-sm-4 col-form-label">Content</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="content" name="content" value="<%=story.content%>">
            </div>
        </div>
        
        <div class="form-group row">
            <label  for="picture" class="col-sm-4 col-form-label">Select File</label>
            <div class="col-sm-4">
                <input type="file" class="form-control" id="picture" name="picture">
            </div>
        </div>
     
        
        <div class="form-group row">
            <label  for="category" class="col-sm-4 col-form-label">Category</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="category" name="category" value="<%=story.category%>">
            </div>
        </div>
    
        
        <div class="form-group row">
            <div class="col-sm-4"> </div>
            <div class="col-sm-4">
                <button class="btn btn-primary btn-block"> Edit Post </button> 
            </div>
        </div>
        <div class="col-sm-4"></div>            
    
    </form>
</div>
<%- include('templates/footer'); -%>